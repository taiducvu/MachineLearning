import Layers
import Network
import mnist_loader as ml

if __name__ == '__main__':
    
    training_data, validation_data, test_data = ml.load_data_unify() # This source code is written by Bao Chiem

    fcLayer = Layers((50, 284), False)
    outLayer = Layers((10, 50), True)
    
    lsLayer = []
    lsLayer.append(fcLayer)
    lsLayer.append(outLayer)
    
    cnn = Network(training_data, validation_data, lsLayer)
    cnn.SGD(10, 10, 0.1)